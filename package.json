    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.10.0",
    "flow": "^0.2.3",
    "flow-bin": "^0.40.0",
    "fontgen-loader": "^0.2.1",
    "ignore-styles": "^5.0.1",
    "imports-loader": "^0.7.0",
    "isparta-loader": "^2.0.0",
    "jsdom": "^9.11.0",
    "json": "^9.0.4",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
