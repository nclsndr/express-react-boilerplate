{
  "name": "universal-express-react-redux-boilerplate",
  "version": "1.0.0",
  "description": "Isomorphic boilerplate",
  "main": "dist/server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "better-npm-run dev",
    "dev:ssr": "better-npm-run dev:ssr",
    "dev:ssr-only": "better-npm-run dev:ssr-only",
    "build": "better-npm-run build",
    "prod": "better-npm-run prod",
    "test": "better-npm-run test:all",
    "mocha": "better-npm-run mocha",
    "lint": "better-npm-run lint",
    "flow": "better-npm-run flow",
    "clean": "rimraf dist"
  },
  "betterScripts": {
    "dev": {
      "command": "babel-node bin/dev-front",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "dev:ssr": {
      "command": "babel-node bin/dev-ssr",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "dev:ssr-only": {
      "command": "babel-node bin/dev-ssr",
      "env": {
        "SSR_ONLY": "enabled",
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "build": {
      "command": "rimraf dist && babel-node bin/build",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "prod": {
      "command": "node dist/server",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "test:all": {
      "command": "mocha test --recursive --compilers js:babel-register --require ignore-styles && eslint . && flow check .",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "test:*"
      }
    },
    "mocha": {
      "command": "mocha test --recursive --compilers js:babel-register --require ignore-styles",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "lint": {
      "command": "eslint .",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "flow": {
      "command": "flow check .",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nclsndr/express-react-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "isomorphic"
  ],
  "author": "nclsndr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nclsndr/express-react-boilerplate/issues"
  },
  "homepage": "https://github.com/nclsndr/express-react-boilerplate#readme",
  "dependencies": {
    "axios": "^0.15.3",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "debug": "^2.6.1",
    "express": "^4.14.0",
    "fs-extra": "^2.0.0",
    "history": "^4.5.1",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "path": "^0.12.7",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.1",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-immutable": "^3.0.10",
    "redux-thunk": "^2.2.0",
    "webpack-node-externals": "^1.5.4",
    "window-or-global": "^1.0.1",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.5",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.3.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "0.0.14",
    "chai": "^3.5.0",
    "css-loader": "^0.26.2",
    "cssnano": "^3.10.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-promise": "^3.4.2",
